@model DoorBoxApp.Models.ViewModels.AssignDMViewModel
@{
    ViewData["Title"] = "Assign Packages";
}
@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}
<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Assign Packages</h3>
                </div>
               
            </div>
        </div>
        <div class="card-body p-3">
            <form asp-action="AssignPackages">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Select Packages</label>

                            <select asp-for="Packages" class="form-control"  multiple="multiple">
                                @foreach (var package in ViewBag.Packages)
                                {
                                    <option value="@package.Id">@package.ClientName (@package.PhoneNumber)</option>
                                }


                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script asp-append-version="true" type="text/javascript" src="~/vendor/select2/select2.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
