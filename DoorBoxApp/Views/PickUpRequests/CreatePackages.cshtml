                                    <option value="0" selected disabled>------Select------</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Location (To)</label>
                                <select id="locationToId" class="form-control" data-toggle="select">
                                    <option value="0" selected disabled>------Select------</option>
                                    @foreach (var location in ViewBag.Locations)
                                    {
                                        <option value="@location.Id">@location.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
