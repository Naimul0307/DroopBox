                                    <option value="0" selected disabled>------Select------</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Details</label>
                                <textarea id="details" class="form-control" rows="1"></textarea>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Weight (KG)</label>
                                <input id="weight" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Price (TK)</label>
                                <input id="productPrice" class="form-control">
                                <input id="deliveryPrice" type="hidden" class="form-control">
                                <input id="totalPrice" type="hidden" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Selling Price</label>
                                <input id="sellingPrice" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Remarks</label>
                                <input id="remarks" class="form-control">
                            </div>
                        </div>



                        <div class="col-12">
                            <div class="text-center">
                                <input class="btn btn-success  mb-4 " type="button" name="name" id="saveFormButton" value="Save">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card mb-4 animated fadeIn">
                <div class="card-header p-3">
                    <div class="row align-items-center">
                        <div class="col text-center">
                            <h3 class="mb-0 skewed skewed-yellow text-white d-inline-block text-uppercase ls-1">Packages Details</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">

                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="locationFromLabel">Location (From) : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="locationFromLabel">@Model.LocationFrom.Name</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Name : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="clientNameLabel">------ ------ ------ ------ ------ ------ ------ ------ ------ --</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Address : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="addressLabel">------ ------ ------ ------ ------ ------ ------ ------ -----</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Phone : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="phoneLabel">------ ------ ------ ------ ------ ------ ------ ------ --------</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Package Type : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="packageTypeLabel">------ ------ ------ ------ ------ ------ ------ ------</label>
                            </div>
                        </div>


                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Catagory Type : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="catagoryTypeLabel">------ ------ ------ ------ ------ ------ ------ ------ ----</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Sub Catagory : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="productCatagoryLabel">------ ------ ------ ------ ------ ------ ------ ------ ----</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Location (To) : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="locationToLabel">------ ------ ------ ------ ------ ------ ------ ------</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Sub-Location (To) : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="subLocationToLabel">------ ------ ------ ------ ------ ------ ------ ------</label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Details : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="detailsLabel">------ ------ ------ ------ ------ ------ ------ ------ ------</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Weight : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="weightLabel">------ ------ ------ ------ ------ ------ ------ ------ ------</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Product Price : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="productPriceLabel">------ ------ ------ ------ ------ ------ --- -------</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Delivery Charge : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="deliveryChargeLabel">------ ------ ------ ------ ------ ------ -- ------</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-control-label text-dark ls-1 text-uppercase">Selling Price : </label>
                                <label class="form-control-label text-dark ls-1 text-uppercase" id="sellingPriceLabel">------ ------ ------ ------ ------ ------ -------- ------</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    @if (Model.Status == 0)
    {
        <div class="card mb-4 animated fadeIn">
            <div class="card-header p-3">
                <div class="row align-items-center">
                    <div class="col text-center">

                        <h3 class="mb-0 skewed skewed-yellow text-white d-inline-block text-uppercase ls-1">All Packages</h3>


                    </div>

                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-hover table-striped table-bordered" id="main_table">
                    <thead class="thead-light">
                        <tr>

                            <th class="text-center">Catagory Type</th>
                            <th class="text-center">Catagory</th>
                            <th class="text-center">Location(To)</th>
                            <th class="text-center">Sub-Location(To)</th>
                            <th class="text-center">Type</th>
                            <th class="text-center">Client</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Details</th>
                            <th class="text-center">Weight</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Delivary Price</th>
                            <th class="text-center">Selling Price</th>
                            <th class="text-center">Remarks</th>
                            <th class="text-center">Action</th>

                        </tr>
                    </thead>
                    <tbody id="table_body" class="table_body ">
                        @if (Model.Packages.Count != 0)
                        {
                            double productPriceTotal = 0;
                            double deliveryChargeTotal = 0;
                            double weightTotal = 0;
                            int count = 0;
                            @foreach (var package in Model.Packages)
                            {
                                productPriceTotal += (double)package.ProductPrice;
                                deliveryChargeTotal += (double)package.Price;
                                weightTotal += (double)package.Weight;
                                count++;
                                <tr>
                                    <td class="p-0">
                                        <select class="form-control catagoryTypeId js-single border-0 border-radius-0" data-toggle="select">



                                            @if (package.PackageCatagory.CatagoryType != null)
                                            {
                                                @foreach (var catagory in ViewBag.CatagoryTypes)
                                                {

                                                    if (catagory.Id != package.PackageCatagory.CatagoryTypeId)
                                                    {
                                                        <option value="@catagory.Id">@catagory.Name</option>
                                                    }


                                                }
                                                <option selected value="@package.PackageCatagory.CatagoryTypeId">@package.PackageCatagory.CatagoryType.Name</option>
                                            }
                                            else
                                            {
                                                @foreach (var catagory in ViewBag.CatagoryTypes)
                                                {

                                                    <option value="@catagory.Id">@catagory.Name</option>



                                                }
                                                <option selected disabled value="0">Not Selected</option>
                                            }

                                        </select>

                                    </td>
                                    <td class="p-0">
                                        <select class="form-control catagoryId js-single border-0 border-radius-0" data-toggle="select">



                                            @if (package.PackageCatagoryId != null)
                                            {
                                                @foreach (var catagory in ViewBag.Catagories)
                                                {

                                                    if (catagory.CatagoryTypeId == package.PackageCatagory.CatagoryTypeId && catagory.Id != package.PackageCatagoryId)
                                                    {
                                                        <option value="@catagory.Id">@catagory.Name</option>
                                                    }


                                                }
                                                <option selected value="@package.PackageCatagory.Id">@package.PackageCatagory.Name</option>
                                            }

                                        </select>

                                    </td>

                                    <td class="p-0">
                                        <select class="form-control locationToId js-single border-0 border-radius-0 " data-toggle="select">
                                            @if (package.LocationToId != null)
                                            {
                                                @foreach (var location in ViewBag.Locations)
                                                {

                                                    if (location.Id != package.LocationToId)
                                                    {
                                                        <option value="@location.Id">@location.Name</option>
                                                    }


                                                }

                                                <option selected value="@package.LocationTo.Id">@package.LocationTo.Name</option>
                                            }

                                            else
                                            {
                                                @foreach (var location in ViewBag.Locations)
                                                {

                                                    <option value="@location.Id">@location.Name</option>



                                                }
                                                <option class="text-danger" selected disabled value="0">Not Selected</option>
                                            }

                                        </select>

                                    </td>
                                    <td class="p-0">
                                        <select class="form-control subLocationToId js-single border-0 border-radius-0 " data-toggle="select">
                                            @if (package.SubLocationId != null)
                                            {
                                                @foreach (var subLocation in ViewBag.SubLocationId)
                                                {

                                                    if (subLocation.Id != package.SubLocationId && subLocation.LocationId == package.LocationToId)
                                                    {
                                                        <option value="@subLocation.Id">@subLocation.Name</option>
                                                    }


                                                }

                                                <option selected value="@package.SubLocation.Id">@package.SubLocation.Name</option>
                                            }

                                            else
                                            {
                                                @foreach (var subLocation in ViewBag.SubLocationId)
                                                {
                                                    if (subLocation.LocationId == package.LocationToId)
                                                    {
                                                        <option value="@subLocation.Id">@subLocation.Name</option>
                                                    }



                                                }
                                                <option class="text-danger" selected disabled value="0">Not Selected</option>
                                            }

                                        </select>

                                    </td>

                                    <td class="p-0">
                                        <select class="form-control packageTypeId js-single border-0 border-radius-0" data-toggle="select">
                                            @if (package.PackageTypeId != null)
                                            {
                                                @foreach (var type in ViewBag.PackageTypeId)
                                                {

                                                    if (type.Id != package.PackageTypeId)
                                                    {
                                                        <option value="@type.Id">@type.Name</option>
                                                    }


                                                }
                                                <option selected value="@package.PackageType.Id">@package.PackageType.Name</option>
                                            }
                                            else
                                            {
                                                @foreach (var type in ViewBag.PackageTypeId)
                                                {

                                                    <option value="@type.Id">@type.Name</option>



                                                }
                                                <option selected disabled value="0">Not Selected</option>
                                            }

                                        </select>

                                    </td>
                                    <td class="p-0">
                                        <input disabled class="form-control clientName border-0 border-radius-0 text-center" type="text" value="@package.ClientName" />
                                    </td>
                                    <td class="p-0">
                                        <input disabled class="form-control address border-0 border-radius-0 text-center" type="text" value="@package.Address" />
                                    </td>


                                    <td class="p-0">
                                        <input disabled class="form-control phoneNo border-0 border-radius-0 text-center text-wrap" type="text" value="@package.PhoneNumber" />
                                    </td>
                                    <td class="p-0">
                                        <input disabled class="form-control details border-0 border-radius-0 text-center" type="text" value="@package.Details" />
                                    </td>
                                    @if (package.Weight != null)
                                    {
                                        <td class="p-0">
                                            <input class="form-control weight border-0 border-radius-0 text-center" type="text" value="@package.Weight" />
                                        </td>

                                    }
                                    else
                                    {
                                        <td class="p-0">
                                            <input class="form-control weight border-0 border-radius-0 text-center" type="text" value="" />
                                        </td>

                                    }
                                    <td class="p-0">
                                        <input disabled class="form-control productPrice border-0 border-radius-0 text-center" type="text" value="@package.ProductPrice" />
                                    </td>

                                    <td class="p-0">
                                        <input disabled class="form-control delivaryPrice border-0 border-radius-0 text-center" type="text" value="@package.Price" />
                                    </td>


                                    <td class="p-0">
                                        <input class="form-control sellingPrice border-0 border-radius-0 text-center" type="text" value="@package.SellingPrice" />
                                    </td>



                                    <td class="p-0">
                                        <input disabled class="form-control remarks border-0 border-radius-0 text-center" type="text" value="@package.Remarks" />
                                        <input type="hidden" class="packageId" name="packageId" value="@package.Id" />
                                    </td>






                                    @if (package.Status == 0)
                                    {

                                        <td class="text-center align-middle p-2">
                                            <div class="btn-group">

                                                <input class="btn btn-success btn-sm saveButton mr-0" type="button" name="save_button" value="Save" />
                                                <input class="btn btn-danger btn-sm delete_button " type="button" name="delete_button" value=" Delete" />
                                            </div>



                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center align-middle p-2">
                                            <div class="btn-group">

                                                <input class="btn btn-primary btn-sm mr-0 saveButton" type="button" id="noAction" value="Edit" />
                                                <input class="btn btn-danger btn-sm delete_button " type="button" name="delete_button" id="delete_button" value="Delete" />
                                            </div>


                                        </td>
                                    }


                                </tr>
                            }

                            <tr>
                                <td class="text-center font-weight-800" colspan="7">Number of Packages : @count</td>
                                <td class="text-center font-weight-800" colspan="2">Total :</td>
                                <td class="text-center font-weight-800">@weightTotal KG</td>
                                <td class="text-center font-weight-800">@productPriceTotal TK</td>
                                <td class="text-center font-weight-800">@deliveryChargeTotal TK</td>
                                @{
                                    double totalTk = productPriceTotal;
                                }
                                <td class="text-center font-weight-800" colspan="3"></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            @if (ViewBag.Finalizable)
            {
                <div class="col-12">
                    <div class="text-center">
                        <input class="btn btn-success mt-3 mb-3 " type="button" name="name" id="finalizeButton" value="Finalize">
                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="card mb-4 animated fadeIn">
            <div class="card-header p-3">
                <div class="row align-items-center">
                    <div class="col text-center">

                        <h3 class="mb-0 skewed skewed-yellow text-white d-inline-block text-uppercase ls-1">All Packages</h3>


                    </div>

                </div>
            </div>
